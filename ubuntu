#ubuntu
desabilitar secure boot
desabilitar fast boot
habilitar uefi
/boot 2GB  2048 MB
/boot/efi 500GB 524288 MB
/ 128GB  131072 MB
/home resto do disco

#pós instalação
sudo apt update && sudo apt upgrade

#Ativar preload (carregamento inteligente de apps)
sudo apt install preload
systemctl enable preload
systemctl start preload

# adds gnome
sudo apt install gnome-shell-extensions gnome-tweaks gnome-sushi 

# sistema
sudo apt install build-essential cmake yasm nasm curl wget gparted apt-transport-https dirmngr gdebi git vim neovim aria2 htop btop wpagui hardinfo cpu-x smartmontools
sudo apt install ubuntu-restricted-extras
sudo apt install gufw
sudo ufw enable

#melhorar consumo de energia da bateria
sudo apt install tlp tlp-rdw
sudo systemctl enable tlp --now
sudo tlp start

#otimizar memória
sudo bash -c 'cat >> /etc/sysctl.conf <<EOF
vm.swappiness=10
vm.vfs_cache_pressure=50
vm.dirty_background_bytes=16777216
vm.dirty_bytes=50331648
EOF'


#ativar leitura correta de sensores
sudo apt install lm-sensors psensor fancontrol powertop
sudo sensors-detect

#aceleração de vídeo intel  
sudo apt install intel-media-va-driver i965-va-driver  i965-va-driver-shaders

#minimizar clicando sobre os ícones
gsettings set org.gnome.shell.extensions.dash-to-dock click-action 'minimize'


#utilitários
