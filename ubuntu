#ubuntu
desabilitar secure boot
desabilitar fast boot
habilitar uefi
/boot 2GB
/boot/efi
/ 128GB
/home resto do disco

#pós instalação
sudo apt update && sudo apt upgrade

sudo apt install curl wget apt-transport-https dirmngr gdebi
sudo apt install ubuntu-restricted-extras
sudo apt install gufw
sudo ufw enable


#melhorar consumo de energia da bateria
sudo apt install tlp tlp-rdw
sudo systemctl enable tlp --now
sudo tlp start

#otimizar memória
sudo bash -c 'cat >> /etc/sysctl.conf <<EOF
vm.swappiness=10
vm.vfs_cache_pressure=50
vm.dirty_background_bytes=16777216
vm.dirty_bytes=50331648
EOF'


#ativar leitura correta de sensores
sudo apt install lm-sensors psensor fancontrol powertop
sudo sensors-detect

#aceleração de vídeo intel  
sudo apt install intel-media-va-driver i965-va-driver

#instalar aplicativos com 1 click
sudo apt install apturl apturl-common

#minimizar clicando sobre os ícones
gsettings set org.gnome.shell.extensions.dash-to-dock click-action 'minimize'


#utilitários
sudo apt install audacity audacious bleachbit caffeine calibre cheese drawing darktable digikam gparted handbrake htop imagemagick kdeconnect obs-studio okular remmina vlc rhythmbox shotwell shutter timeshift transmission uget vim wpagui hardinfo cpu-x gnome-tweaks winff qbittorrent qalculate-qt speedcrunch screenruler 

#compactação de arquivos
sudo apt install arc arj cabextract lhasa p7zip p7zip-full p7zip-rar rar unrar unar unace unzip xz-utils zip



#flatpak
sudo apt install flatpak
flatpak remote-add --if-not-exists flathub https://dl.flathub.org/repo/flathub.flatpakrepo
flatpak install spotify
flatpak install simplenote
flatpak install telegram
flatpak install steam
flatpak install PeaZip
flatpak install freecad
flatpak install gimp
flatpak install krita
flatpak install inkscape
flatpak install blender
flatpak install kdenlive
flatpak install onlyoffice


