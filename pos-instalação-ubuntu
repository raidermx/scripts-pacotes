#essencial
sudo apt install git aptitude btop htop inxi hardinfo psensor debsums deborphan smartmontools vrms gnome-system-tools baobab gnome-usage rygel rygel-preferences build-essential dkms
 
#configurar gnome
sudo apt install gnome-software
gsettings set org.gnome.shell.extensions.dash-to-dock click-action 'minimize'
sudo apt install gnome-tweaks

#firewall
apt install ufw gufw
sudo ufw enable

#otimizar memória
sudo nano /etc/sysctl.conf
vm.swappiness=10
vm.vfs_cache_pressure=50
vm.dirty_background_bytes=16777216 
vm.dirty_bytes=50331648 

# melhorar consumo da bateria do notebook
sudo apt install tlp tlp-rdw
sudo systemctl enable tlp.service && sudo tlp start

